<% provide(:title, 'Sistrix Sichtbarkeitsindex') %>
<% @body_id = "sistrix-page" %>

  <div class="row">
     <div class="col-lg-12">
           <h1 class="page-header">Sistrix Sichtbarkeitsindex</h1>
      </div>   
         </div>
       <div class="row">
           <div class="col-lg-12">
      <div class="panel panel-default">
      <div class="panel-heading" name="top-ten-results" id="top-ten-results">
		</div>
      	<div class="panel-body">
            <ul class="nav nav-tabs">
              <li role="presentation" class="active"><a data-toggle="tab" href="#welt">welt.de</a></li>
              <li role="presentation"><a data-toggle="tab" href="#focus">focus.de</a></li>
            </ul>
            <div class="tab-content">
                <div id="welt" class="tab-pane fade in active">
                      <div class="table-responsive">
                         <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                    <thead>
                                            <tr>
                                            <th><%= sortable_visibility "channel", "Channel" %></th>
                                            <th><%= sortable_visibility "url", "URL" %></th>
                                            <th><%= sortable_visibility "kw", "KW" %></th>
                                            <th><%= sortable_visibility "sistrix_index", "SI" %></th>
                                            </tr>
                                    </thead>
                                      <tbody>
                                          <% @sistrix_items.each_with_index do |s, i|  %>
                                            <tr>
                                              <td><%= s.channel %></td>
                                              <td><a target=_blank href="<%= s.url %>"><%= s.url %></a> </td>
                                              <td><%= s.kw %></td>
                                              <td><%= s.sistrix_index %></td>
                                            </tr>
                                            <% end %>
                                        </tbody>
                                </table>
                        <%= will_paginate @sistrix_items, renderer: BootstrapPagination::Rails%>
			         </div>
                    </div>
            
            <div id="focus" class="tab-pane fade">
                    
                </div>
                </div><!-- tab content -->
          </div>
          <!-- panel body -->
	</div>
	</div><!-- span12 -->
    </div>  <!-- row -->